<div class="container mt-3 w-50 card-bg p-3 shdw">
	<h1 class="mt-3">Sign in</h1>
<%= form_with(scope: :session, url: login_path, class: "form-group", local: true) do |f| %>
<div class="form-group ">
	<%=f.label :username%>
  <%=f.text_field :username, class: "form-control"%>
</div>
  <div class="form-group">
  	<%=f.submit "sign in", class: "btn"%>
  </div>
  
<% end %>
</div>